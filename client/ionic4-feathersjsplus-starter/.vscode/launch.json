  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run android on device (no-native-run)",
      "type": "cordova",
      "request": "launch",
      "platform": "android",
      "target": "device",
      "sourceMaps": true,
      "cwd": "${workspaceFolder}",
      "runArguments": ["--no-native-run"]
    },
    {
      "name": "Run android on device",
      "type": "cordova",
      "request": "launch",
      "platform": "android",
      "target": "device",
      "sourceMaps": true,
      "cwd": "${workspaceFolder}"
    },
    {
      "name": "Attach to android on device",
      "type": "cordova",
      "request": "attach",
      "platform": "android",
      "target": "device",
      "sourceMaps": true,
      "cwd": "${workspaceFolder}"
    },
    {
      "name": "Run android|ios on device|emulator",
      "type": "cordova",
      "request": "launch",
      "platform": "android|ios",
      "target": "device|emulator",
      "sourceMaps": true,
      "cwd": "${workspaceFolder}"
    },
    {
      "name": "Attach to android|ios on device|emulator",
      "type": "cordova",
      "request": "attach",
      "platform": "android|ios",
      "target": "device|emulator",
      "sourceMaps": true,
      "cwd": "${workspaceFolder}"
    },
    {
      "name": "Launch via NPM",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "npm",
      "runtimeArgs": [
        "run",
        "ionic:serve"
      ],
      "timeout": 120000,
      "console": "integratedTerminal",
      "port": 9229
    },
    {
      "name": "Launch Ionic (no Cordova)",
      "type": "node",
      "request": "launch",
      "program": "ionic",
      "args": [
        "serve"
      ],
      "port": 9229
    },
    {
      "name": "Attach in Chrome",
      "type": "chrome",
      "request": "attach",
      "url": "http://localhost:8100/",
      "sourceMaps": true,
      "port": 9222
    },
    {
      "name": "Launch in Chrome",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:8100",
      "webRoot": "${workspaceFolder}"
    }
  ]
}

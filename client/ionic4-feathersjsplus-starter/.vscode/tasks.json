{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Serve Ionic app",
      "type": "shell",
      "command": "ionic",
      "args": [
        "serve",
        "-b"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": []
    },
    {
      "label": "Serve Ionic/Cordova app",
      "type": "shell",
      "command": "ionic",
      "args": [
        "serve",
        "--cordova",
        "--platform=browser",
        "--address",
        "0.0.0.0",
        "-b"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": []
    },
    {
      "label": "Serve Cordova browser app",
      "type": "shell",
      "command": "ionic",
      "args": [
        "cordova",
        "run",
        "browser",
        "-l",
        "--address",
        "0.0.0.0"
      ],
      "group": "build",
      "problemMatcher": []
    },
    {
      "label": "Prepare Cordova browser app",
      "type": "shell",
      "command": "ionic",
      "args": [
        "cordova",
        "prepare",
        "--no-build",
        "browser"
      ],
      "group": "build",
      "problemMatcher": []
    },
    {
      "label": "Build Cordova browser app",
      "type": "shell",
      "command": "ionic",
      "args": [
        "cordova",
        "build",
        "browser"
      ],
      "group": "build",
      "problemMatcher": []
    },
    {
      "label": "Serve Cordova android app",
      "type": "shell",
      "command": "ionic",
      "args": [
        "cordova",
        "run",
        "android",
        "-l",
        "-c",
        "--address",
        "localhost"
      ],
      "group": "build",
      "problemMatcher": []
    },
    {
      "label": "Prepare Cordova android app",
      "type": "shell",
      "command": "ionic",
      "args": [
        "cordova",
        "prepare",
        "--no-build",
        "android"
      ],
      "group": "build",
      "problemMatcher": []
    },
    {
      "label": "Build Cordova android app",
      "type": "shell",
      "command": "ionic",
      "args": [
        "cordova",
        "build",
        "android"
      ],
      "group": "build",
      "problemMatcher": []
    }
  ]
}
